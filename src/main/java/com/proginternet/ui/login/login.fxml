<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox styleClass="root" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proginternet.ui.login.FXMLLoginController">
    <children>

		<Label text="Please type your username:" />

		<TextField fx:id="usernameField" />

		<Label text="Please type your password:" />
  		
  		<PasswordField fx:id="passwordField" />
  			   
  		<Button fx:id="loginButton" onAction="#checkLogin" text="Login" />
	
		<Button fx:id="registrationButton" onAction="#showRegistration" text="Go to Registration page" />
		
		<Text fx:id="loginMsg" />
	
	</children>
  
</VBox>
